<div class="row">
  {{#each notes}}
    <div class="col-md-6 col-lg-4 m-0 my-2">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            {{title}}
            <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a></h4>
          <hr>
          <p>{{description}}</p>
        </div>
        <form
          action="/notes/delete/{{_id}}?_method=DELETE"
          method="POST"
          class="mb-2 mx-3"
        >
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit" class="btn btn-danger btn-block">Delete</button>
        </form>
      </div>
    </div>
  {{/each}}
</div>