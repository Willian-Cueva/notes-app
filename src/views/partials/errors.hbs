{{#each errors}}
  <div
    class="alert alert-danger alert-dismissible fade show d-flex justify-content-between px-3"
    role="alert"
  >
    {{text}}
    <div class="my-auto"><button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button></div>
  </div>
{{/each}}